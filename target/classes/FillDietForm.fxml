<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1000.0" stylesheets="@css/Darktheme.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FillDietFormController">
    <children>
        <ImageView fitHeight="98.0" fitWidth="103.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@img/logo.png" />
            </image>
        </ImageView>
        <TabPane prefHeight="600.0" prefWidth="1000.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Diet Form">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="12.0" layoutY="16.0" text="Fill this Diet Form :">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label layoutX="31.0" layoutY="70.0" text="Start Date">
                                    <font>
                                        <Font name="Segoe UI Bold" size="21.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="startDate" layoutX="172.0" layoutY="69.0" />
                                <Label layoutX="34.0" layoutY="122.0" text="End Date">
                                    <font>
                                        <Font name="Segoe UI Bold" size="21.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="endDate" layoutX="171.0" layoutY="121.0" />
                                <Label layoutX="37.0" layoutY="171.0" text="Goal">
                                    <font>
                                        <Font name="Segoe UI Bold" size="21.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="goal" layoutX="153.0" layoutY="167.0" prefHeight="31.0" prefWidth="269.0" style="-fx-background-color: white;">
                                </ChoiceBox>
                                <Label layoutX="39.0" layoutY="225.0" text="Duration by weeks">
                                    <font>
                                        <Font name="Segoe UI Bold" size="21.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="duration" layoutX="252.0" layoutY="229.0" />
                                <Label layoutX="41.0" layoutY="288.0" text="Description">
                                    <font>
                                        <Font name="Segoe UI Bold" size="21.0" />
                                    </font>
                                </Label>
                                <TextArea fx:id="desc_textArea" layoutX="208.0" layoutY="291.0" prefHeight="186.0" prefWidth="632.0" />
                                <Button fx:id="send_btn" layoutX="213.0" layoutY="503.0" mnemonicParsing="false" onAction="#pushRegime" prefHeight="32.0" prefWidth="161.0" styleClass="login-btn" stylesheets="@css/css.css" text="send" />
                                <Button fx:id="seeForm" layoutX="413.0" layoutY="504.0" mnemonicParsing="false" onAction="#ViewForm" prefHeight="32.0" prefWidth="161.0" styleClass="login-btn" stylesheets="@css/css.css" text="View Form" />
                                <Button fx:id="seeBMI" layoutX="614.0" layoutY="504.0" mnemonicParsing="false" onAction="#BMI" prefHeight="32.0" prefWidth="161.0" styleClass="login-btn" stylesheets="@css/css.css" text="BMI" />
                                <Label layoutX="231.0" layoutY="20.0" text="Check your BMI first so you can provide us with informations in the description ">
                                    <font>
                                        <Font name="System Bold" size="17.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Form View">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
            <padding>
                <Insets left="100.0" />
            </padding>
        </TabPane>
    </children>
</AnchorPane>